<script>let totalFunds = 50000;
let dispBtn = document.getElementById("disp_btn");
let selBsn = document.getElementById("sel_bsn");
let fundsDiv = document.getElementById("funds");
let appForm = document.getElementById("appForm");
let buildingsDiv = document.getElementById("buildings");
let monthReportDiv = document.getElementById("monthReport");
let licenceFeeDiv = document.getElementById("licenceFee");
let openingDiv = document.getElementById("opening");
let groupDiv = document.getElementById("group");

function numWCommas(num){
    fundsDiv.innerHTML = "$" + num.toLocaleString('en', {useGrouping:true});
}

function nextMenu(hideEl, showEl){
    hideEl.style.display = "none";
    showEl.style.display = "block";
}

dispBtn.onclick = function(){
    nextMenu(selBsn, appForm)
    totalFunds += 450000;
    numWCommas(totalFunds);
    createGroup();
}

payAppFee.onclick = function(){
    nextMenu(appForm, licenceFeeDiv)
    totalFunds -= 7000;
    numWCommas(totalFunds);
    createBuilding1();
}

payLicenceFee.onclick = function(){
    nextMenu(licenceFeeDiv,retailForm);
    totalFunds -= 60000;
    numWCommas(totalFunds);
}

payRentFee.onclick = function(){
    nextMenu(retailForm,b1Upgrades);
    totalFunds -= 3000;
    numWCommas(totalFunds);
}

let building = document.createElement("div");
function createBuilding1(){

    building.setAttribute( "id", "building1" );
    building.style.color = "brown";
    building.style.backgroundColor = "lightgreen";
    building.style.width = "300px";
    building.style.height = "300px";
    building.innerHTML = "Building1"

    buildingsDiv.appendChild(building);
}

let group = document.createElement("div");
function createGroup(){

    group.setAttribute( "id", "groupDiv" );
    group.style.color = "purple";
    group.style.backgroundColor = "teal";
    group.style.width = "100px";
    group.style.height = "100px";
    group.innerHTML = "<b>Founders</b> <br>Operators <br> Managers <br> Executives"

    groupDiv.appendChild(group);
}

payBuild.onclick = function(){
    nextMenu(b1Upgrades,openingDiv);
    totalFunds -= 112400;
    numWCommas(totalFunds);
    building.style.backgroundColor = "skyblue";
    building.innerHTML = "Dispensary"
}

payProduct.onclick = function(){
    nextMenu(openingDiv,monthReportDiv);
    totalFunds -= 234500;
    numWCommas(totalFunds);
    building.style.backgroundColor = "skyblue";
    building.innerHTML = "Dispensary"
}






</script>
